<head>
	<script id="contentStreamTemplate" type="text/template">
	    <div class="comment">
	    {{#comments}}
	       <p>{{full_name}}</p> </br>
	       <p>{{created_at}} {{book_start}} {{chapters}}:{{verse_start}}-{{verse_end}}</p> </br>
	       <div class='comment_verses'>{{verses}}</div> </br>
	       <div class='comment_body'>{{description}}</div> </br>
	    {{/comments}}
	    </div>
	</script>  
</head>
<body>
<section>
<article class ="row">
	<article id = "Bible" class = "large-8 columns">
	  <%= form_for @users_bible_view, :remote=>true do |v| %>
	    <%= v.collection_select(:bible_version, BibleVersion.all, :file_name, :name) %>
	    <%= v.collection_select(:book, BibleBooks.all, :book, :book) %>
	    <%= v.select(:chapter, grouped_options_for_select(BibleChapters.for_select)) %>
	    <%= v.submit "Go" %>
	  <% end %>
	  <div id = "BibleOutput"><%= @output %></div>
	</article>
	<article id = "Comment" class = "large-4 columns">
	  <%= form_for @bible_comment, :remote=>true do |c| %>
	    <%= c.collection_select(:book_start, BibleBooks.all, :book, :book) %>
	    <%= c.select(:chapter_start, grouped_options_for_select(BibleChapters.for_select)) %>
	    <%= c.collection_select(:verse_start, BibleVerse.default_verses, :bible_verse, :bible_verse) %>
	    <%= c.collection_select(:verse_end, BibleVerse.default_verses, :bible_verse, :bible_verse, { :selected => BibleVerse.default_verses.last[:bible_verse] }) %>
	    <%= c.text_area :description %>
	    <%= c.hidden_field :user_id, :value => current_user.id %>
	    <%= c.submit "Comment" %>
	  <% end %>
	</article>
	<article id = "ContentStream" class = "large-4 columns">
	</article>
	<article id='spinner'>
	  <div id="floatingCirclesG">
	  <div class="f_circleG" id="frotateG_01">
	  </div>
	  <div class="f_circleG" id="frotateG_02">
	  </div>
	  <div class="f_circleG" id="frotateG_03">
	  </div>
	  <div class="f_circleG" id="frotateG_04">
	  </div>
	  <div class="f_circleG" id="frotateG_05">
	  </div>
	  <div class="f_circleG" id="frotateG_06">
	  </div>
	  <div class="f_circleG" id="frotateG_07">
	  </div>
	  <div class="f_circleG" id="frotateG_08">
	  </div>
	  </div>
	</article>
</article>
</section>
</body>