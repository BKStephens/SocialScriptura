<head>
  <style>
    section {
        padding: 100px;
    }

	#Bible { 
		position: fixed;
		margin-top: -150px;
		width: 40%;
		height: 90%;
		border-style:solid;
		border-width:2px;
		word-wrap: break-word;
	}

	#Comment { 
		position: fixed;
		margin-top: -150px;
		right: 70px;
		width: 40%;
		height: 30%;
		border-style:solid;
		border-width:2px;
		word-wrap: break-word;
	}

	#ContentStream { 
		position: fixed;
		margin-top: 100px;
		right: 70px;
		width: 40%;
		height: 59%;
		border-style:solid;
		border-width:2px;
		word-wrap: break-word;
	}
  </style>
</head>

<body>
<section>
<article id = "Bible">
	<%= @output %>
</article>
<article id = "Comment">
  <%= form_for @bible_comment do |c| %>
    <%= c.text_area :description %>
    <%= c.hidden_field :user_id, :value => current_user.id %>
    <%= c.submit %>
  <% end %>
</article>
<article id = "ContentStream">
  <div>Content Stream will go here</div>
</section>
</body>